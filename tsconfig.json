{
  "version": "1.8.0",
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./es6",
    "target": "es6",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "declaration": true
  },
  "fileGlobs": [
    "./lib/**/*.ts",
    "./typings/**/*.ts",
    "./manual-typings/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
